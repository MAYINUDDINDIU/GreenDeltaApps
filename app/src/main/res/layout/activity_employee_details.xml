<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".EmployeeDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >



    <LinearLayout
        android:id="@+id/details_info"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/user"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BASIC INFORMATION"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#374FE1"
            android:textSize="16dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="7dp"
            app:cardBackgroundColor="#FCFAFA"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            android:layout_height="185dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="First Name: "
                        android:layout_height="wrap_content"
                        android:background="#3378EB"
                        android:textAlignment="textEnd"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:padding="5dp"
                        />
                    <TextView
                        android:id="@+id/firstname"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="Loading..."
                        android:layout_height="wrap_content"
                        android:background="#00B0FF"
                        android:textAlignment="textStart"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:padding="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Last Name: "
                        android:layout_height="wrap_content"
                        android:background="#3378EB"
                        android:textAlignment="textEnd"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:padding="5dp"
                        />
                    <TextView
                        android:id="@+id/lastname"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="Loading..."
                        android:layout_height="wrap_content"
                        android:background="#00B0FF"
                        android:textAlignment="textStart"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:padding="5dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Date of Birth: "
                        android:layout_height="wrap_content"
                        android:background="#3378EB"
                        android:textAlignment="textEnd"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:padding="5dp"
                        />
                    <TextView
                        android:id="@+id/dob"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:text="Loading..."
                        android:layout_height="wrap_content"
                        android:background="#00B0FF"
                        android:textAlignment="textStart"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:padding="5dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Phone: "
                        android:layout_height="wrap_content"
                        android:background="#3378EB"
                        android:textAlignment="textEnd"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:padding="5dp"
                        />
                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="Loading..."
                        android:layout_height="wrap_content"
                        android:background="#00B0FF"
                        android:textAlignment="textStart"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:padding="5dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Gender: "
                        android:layout_height="wrap_content"
                        android:background="#3378EB"
                        android:textAlignment="textEnd"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:padding="5dp"
                        />
                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="Loading..."
                        android:layout_height="wrap_content"
                        android:background="#00B0FF"
                        android:textAlignment="textStart"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:padding="5dp"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#304FFE"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SKILL INFORMATION"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#374FE1"
            android:textSize="16dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="7dp"
            app:cardBackgroundColor="#FCFAFA"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            android:layout_height="108dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Skill Name: "
                        android:layout_height="40dp"
                        android:background="#3378EB"
                        android:textAlignment="textEnd"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:padding="5dp"
                        />
                    <TextView
                        android:id="@+id/skillname"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="Loading..."
                        android:layout_height="40dp"
                        android:background="#00B0FF"
                        android:textAlignment="textStart"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:padding="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Experience: "
                        android:layout_height="wrap_content"
                        android:background="#3378EB"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:padding="5dp"
                        />
                    <TextView
                        android:id="@+id/experience"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="Loading..."
                        android:layout_height="wrap_content"
                        android:background="#00B0FF"
                        android:textAlignment="textStart"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:padding="5dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Skill Level: "
                        android:layout_height="wrap_content"
                        android:background="#3378EB"
                        android:textAlignment="textEnd"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:padding="5dp"
                        />
                    <TextView
                        android:id="@+id/skilllevel"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:text="Loading..."
                        android:layout_height="wrap_content"
                        android:background="#00B0FF"
                        android:textAlignment="textStart"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:padding="5dp"
                        />

                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#304FFE"
                    />
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/y"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:cardElevation="2dp"
                android:visibility="gone"
                app:cardCornerRadius="3dp"
                android:layout_margin="3dp"
                android:foreground="?android:selectableItemBackground"
                >

            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>


         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             app:cardCornerRadius="10dp"
             app:cardUseCompatPadding="true"
             app:cardElevation="5dp"
             android:layout_height="90dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/edit"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="EDIT"
                android:textSize="16dp"
                android:src="@drawable/edit"
                />
            <ImageView
                android:id="@+id/delete"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="EDIT"
                android:textSize="16dp"
                android:src="@drawable/trash"
                />

        </LinearLayout>
         </androidx.cardview.widget.CardView>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/editpart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp"
            android:elevation="7dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BASIC INFORMATION"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#374FE1"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="5dp"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/efirstname"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="2dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/elastname"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="2dp"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content"
                    android:hint="Phone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ephone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="2dp"
                        android:ems="10"
                        android:maxLength="11"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content"
                    android:hint="Gender">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/egender"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="2dp"
                        android:ems="10"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_height="50dp">



                    <TextView
                        android:id="@+id/edob"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:gravity="center_vertical"
                        android:hint="Date Of Birth"
                        android:textSize="15dp"
                        android:textColor="#040404"
                        android:padding="10dp"
                        android:layout_marginTop="15dp"
                        android:drawableRight="@drawable/date"
                        android:layout_marginBottom="20dp"
                        />


                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp"
            android:elevation="7dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SKILL INFORMATION"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#374FE1"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Skill Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eskillname"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="2dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Experience">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eexperince"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="2dp"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content"
                    android:hint="Skill Level">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/skill_level"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="2dp"
                        android:ems="10"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/edit_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:textSize="16dp"
            android:padding="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:textColor="#fff"
            android:backgroundTint="#374FE1"
            />

    </LinearLayout>

    </LinearLayout>


</ScrollView>